{
  "name": "weather-gripe",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./src/styles/input.css -o ./public/style.css --minify",
    "watch:css": "tailwindcss -i ./src/styles/input.css -o ./public/style.css --watch",
    "dev": "npm run watch:css & wrangler dev",
    "deploy": "npm run build:css && wrangler deploy"
  },
  "dependencies": {
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.60.0"
  }
}
